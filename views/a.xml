<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="action_student" model="ir.actions.act_window">
            <field name="name">action_student</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,search,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add Student
                </p>
            </field>
        </record>


        <record id="action_course" model="ir.actions.act_window">
            <field name="name">action_course</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Select Course
                </p>
            </field>
        </record>



        <record id="action_subject" model="ir.actions.act_window">
            <field name="name">action_subject</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.subject</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_sub1':'Maths'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enter Subject
                </p>
            </field>

        </record>

</odoo>